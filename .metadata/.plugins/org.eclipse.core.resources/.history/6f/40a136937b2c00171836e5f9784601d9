		textField.setHorizontalAlignment(SwingConstants.RIGHT);
		textField.setFont(new Font("Courier New", Font.PLAIN, 28));
		pnDisplay.add(textField);
		textField.setColumns(10);

		pnInput = new JPanel();
		contentPane.add(pnInput, BorderLayout.CENTER);
